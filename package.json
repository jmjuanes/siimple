{
    "name": "siimple",
    "version": "4.0.0-dev",
    "private": true,
    "description": "A minimal and themeable CSS toolkit for flat and clean designs.",
    "author": "Josemi Juanes <josemi@siimple.xyz>",
    "license": "MIT",
    "homepage": "https://www.siimple.xyz/",
    "repository": "https://github.com/siimple/siimple",
    "bugs": "https://github.com/siimple/siimple/issues",
    "scripts": {
        "build": "gulp build:bundle build:icons && npm run build:css && npm run build:cheatsheet",
        "build:cheatsheet": "babel-node scripts/cheatsheet.js",
        "build:css": "gulp build:css",
        "build:bundle": "gulp build:bundle",
        "build:components": "gulp build:components",
        "build:icons": "gulp build:icons",
        "docs": "npm run docs:build && npm run docs:assets",
        "docs:build": "gatsby build",
        "docs:assets": "gulp docs:styles docs:fonts docs:assets",
        "serve": "npm run serve:docs",
        "serve:docs": "stattic --folder ./public --port 5000",
        "serve:cheatsheet": "stattic --folder ./dist --port 5000",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/node": "^7.16.8",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-react": "^7.16.7",
        "@mdx-js/mdx": "^1.0.1",
        "@mdx-js/react": "^1.6.22",
        "autoprefixer": "^10.3.5",
        "clean-css": "^5.1.5",
        "codecake": "^0.0.1",
        "dotenv": "^12.0.3",
        "gatsby": "^4.5.2",
        "gatsby-cli": "^4.5.1",
        "gatsby-plugin-mdx": "^3.5.1",
        "gatsby-plugin-page-creator": "^4.5.1",
        "gatsby-source-filesystem": "^4.5.1",
        "glob": "^7.2.0",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.3.0",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "jest": "^27.4.7",
        "kofi": "^0.5.1",
        "lz-string": "^1.4.4",
        "postcss": "^8.3.7",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "sass": "^1.48.0",
        "stattic": "^0.4.0",
        "svg2ttf": "^6.0.3",
        "svgicons2svgfont": "^10.0.5",
        "ttf2woff": "^3.0.0"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            ["@babel/plugin-transform-runtime", {
                "useESModules": true
            }]
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/docs/",
            "/sass/",
            "/scripts/",
            "/src/"
        ],
        "transform": {}
    }
}
