{
    "name": "siimple",
    "version": "4.0.0-dev",
    "private": true,
    "description": "A minimal and themeable CSS toolkit for flat and clean designs.",
    "author": "Josemi Juanes <josemi@siimple.xyz>",
    "license": "MIT",
    "homepage": "https://www.siimple.xyz/",
    "repository": "https://github.com/siimple/siimple",
    "bugs": "https://github.com/siimple/siimple/issues",
    "twitter": "https://twitter.com/siimplecss",
    "scripts": {
        "build": "gulp build:bundle build:icons && npm run build:css",
        "build:css": "gulp build:css",
        "build:bundle": "gulp build:bundle",
        "build:icons": "gulp build:icons",
        "website:clean": "cd website && npm run clean",
        "website:build": "cd website && npm run build",
        "website:serve": "cd website && npm run serve",
        "test": "jest",
        "pre:deploy": "sed 's/{{target}}/'${npm_config_target}'/g' config/firebase.json > firebase.json"
    },
    "devDependencies": {
        "autoprefixer": "^10.3.5",
        "clean-css": "^5.2.4",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.3.0",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "jest": "^27.5.1",
        "postcss": "^8.4.7",
        "sass": "^1.49.9",
        "svg2ttf": "^6.0.3",
        "svgicons2svgfont": "^10.0.5",
        "ttf2woff": "^3.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/docs/",
            "/sass/",
            "/scripts/",
            "/website/"
        ],
        "transform": {}
    }
}
