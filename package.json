{
    "name": "siimple",
    "version": "4.1.0-dev",
    "private": true,
    "description": "A minimal and themeable CSS toolkit for flat and clean designs.",
    "author": "Josemi Juanes <josemi@siimple.xyz>",
    "type": "module",
    "license": "MIT",
    "homepage": "https://www.siimple.xyz/",
    "repository": "https://github.com/jmjuanes/siimple",
    "bugs": "https://github.com/jmjuanes/siimple/issues",
    "workspaces": [
        "packages/*",
        "website/*"
    ],
    "scripts": {
        "build": "gulp css icons:sprite",
        "website:build": "yarn workspace siimple-landing build && yarn workspace siimple-docs build && yarn workspace siimple-playground build",
        "website:copy": "rm -rf ./public && cp -R ./website/landing/public ./public && cp -R ./website/docs/public ./public/docs && cp -R ./website/playground/public ./public/playground",
        "website:serve": "stattic --folder ./public --port 5000",
        "test": "jest"
    },
    "dependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-env": "^7.16.11",
        "autoprefixer": "^10.3.5",
        "babel-jest": "^27.5.1",
        "clean-css": "^5.2.4",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.3.0",
        "gulp-postcss": "^9.0.1",
        "gulp-rename": "^2.0.0",
        "jest": "^27.5.1",
        "postcss": "^8.4.7",
        "stattic": "^0.4.0"
    }
}
